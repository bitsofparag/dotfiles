# https://docs.ansible.com/ansible/latest/modules/file_module.html#examples
- name: ${1:Type}* CREATE ${2:path-and-filename.ext}
  file:
    path: "{{ project_root }}/$2"
    state: touch
    mode: "u=rw,g=r,o=r"
  tags:
    - $3
$0
