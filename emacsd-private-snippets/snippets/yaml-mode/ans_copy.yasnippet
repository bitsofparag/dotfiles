# https://docs.ansible.com/ansible/latest/modules/lineinfile_module.html#examples
- name: ${1:Type}* COPY ${2:src file} to ${3:dest file}
  $0${4:when\: foo == "bar"}
  copy: >
    src="$2"
    dest="{{ project_root }}/$3"
    mode=755
  tags:
    - $1_src_setup
