# -*- mode: snippet -*-
# name: usage
# key: usage
# --
usage() {
    cat << EOT
usage \$0 [${1:-o}] [${3:last_argument}]

DESCRIPTION
  This script will ${4:do something} where you can specify the options described
  below.

  Please provide the "$3" in the end.

  $1
    This option is MANDATORY. ${4:Description TBA}

OPTIONS
  $1 ${2:value}
EOT
}