# -*- mode: snippet -*-
# name: iamlambda
# key: iamlambda
# --
resource "aws_iam_role" "iam_for_lambda" {
  name  = var.iam_role_name == "" ? "\${var.label}-iam-for-lambda" : var.iam_role_name

  assume_role_policy = <<EOF
  {
    "Version": "2012-10-17",
    "Statement": [{
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }]
  }
  EOF
}